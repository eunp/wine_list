<%= form_for @store do |s| %>

  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@store.errors.count, 'error') %> prohibited this store from being saved:
      </h2>
      <ul>
        <% @store.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= s.label :name %><br>
    <%= s.text_field :name %>
  </p>

  <p>
    <%= s.label :description %><br>
    <%= s.text_area :description %>
  </p>

  <p>
    <%= s.submit %>
  </p>

<% end %>
